<Window x:Class="SistemaBancarioSimples.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaBancarioSimples"
        mc:Ignorable="d"
        Title="Painel do Funcionário" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#333" Padding="15">
            <DockPanel>
                <TextBlock Text="Área do Funcionário" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="Sair" Click="Sair_Click" HorizontalAlignment="Right" Padding="10,5" Background="#555" Foreground="White" BorderThickness="0"/>
            </DockPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Pesquisar Cliente (Nome ou Conta):" Foreground="#555" Margin="0,0,0,5"/>
            <TextBox x:Name="txtBusca" Height="35" Padding="5" VerticalContentAlignment="Center" 
                     TextChanged="TxtBusca_TextChanged" BorderBrush="#333"/>
        </StackPanel>

        <DataGrid x:Name="GridClientes" Grid.Row="2" Margin="20,0,20,10" 
                  AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                  SelectionChanged="GridClientes_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Conta" Binding="{Binding Numero}" Width="100"/>
                <DataGridTextColumn Header="Titular" Binding="{Binding NomeTitular}" Width="*"/>
                <DataGridTextColumn Header="Saldo Atual" Binding="{Binding Saldo, StringFormat=C}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3" Background="#DDD" Height="30" Margin="20,0">
            <TextBlock Text="Histórico do Cliente Selecionado" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#555" FontWeight="Bold"/>
        </Border>

        <DataGrid x:Name="GridHistorico" Grid.Row="4" Margin="20,10,20,20" 
                  AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data" Binding="{Binding DataHora, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
