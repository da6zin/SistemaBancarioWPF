<Window x:Class="SistemaBancarioSimples.RendimentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaBancarioSimples"
        mc:Ignorable="d"
        Title="RendimentoWindow" Height="680" Width="800">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF002A8D">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="📈" Foreground="White" FontSize="20" Margin="0,0,10,0"/>
                <TextBlock Text="Simular e Resgatar" Foreground="White" FontSize="18" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="30">

            <TextBlock Text="Saldo Atual Investido" Foreground="#666" FontSize="12"/>
            <TextBlock x:Name="txtSaldoAtual" Text="R$ ---" FontSize="26" FontWeight="Bold" Foreground="#FF002A8D" Margin="0,0,0,20"/>

            <Separator Background="#DDD" Margin="0,0,0,20"/>

            <TextBlock Text="Aporte Mensal (Opcional):" Foreground="#333" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtAporteMensal" Height="40" FontSize="16" VerticalContentAlignment="Center" Padding="5"
                     BorderBrush="#FF002A8D" BorderThickness="1"
                     PreviewTextInput="Valor_PreviewTextInput" Margin="0,0,0,15"/>

            <TextBlock Text="Tempo (Meses):" Foreground="#333" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtMeses" Height="40" FontSize="16" VerticalContentAlignment="Center" Padding="5"
                     BorderBrush="#FF002A8D" BorderThickness="1"
                     PreviewTextInput="Numero_PreviewTextInput" Margin="0,0,0,20"/>

            <Button Content="SIMULAR RENDIMENTO" Click="Simular_Click" 
                    Background="#FF002A8D" Foreground="White" Height="45" FontWeight="Bold" 
                    BorderThickness="0" Cursor="Hand" Margin="0,0,0,20">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="8" Height="80">
                    <Border.Effect>
                        <DropShadowEffect Color="#CCC" BlurRadius="10" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Lucro Simulado:" Foreground="Gray" FontSize="11"/>
                        <TextBlock x:Name="txtResultadoLucro" Text="R$ 0,00" FontSize="18" FontWeight="Bold" Foreground="Green"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="White" CornerRadius="8" Height="80">
                    <Border.Effect>
                        <DropShadowEffect Color="#CCC" BlurRadius="10" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Total Final:" Foreground="Gray" FontSize="11"/>
                        <TextBlock x:Name="txtResultadoTotal" Text="R$ 0,00" FontSize="18" FontWeight="Bold" Foreground="#FF002A8D"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Button x:Name="btnAplicar" Content="RESGATAR LUCRO PARA CONTA" Click="Aplicar_Click" 
                    Visibility="Collapsed"
                    Background="Green" Foreground="White" Height="40" FontWeight="Bold" 
                    BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Fechar" Click="Fechar_Click" Background="Transparent" Foreground="#888" Margin="0,10,0,0" BorderThickness="0" Style="{x:Null}"/>

        </StackPanel>
    </Grid>
</Window>
