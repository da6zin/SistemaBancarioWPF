<Window x:Class="SistemaBancarioSimples.TransacaoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaBancarioSimples"
        mc:Ignorable="d"
        Title="TransacaoWindow" Height="370" Width="800">
    <Grid Background="#F5F5F5" Margin="0,0,0,-26">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF002A8D">
            <TextBlock Text="Nova Transferência" Foreground="White" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="1" Margin="30">
            <TextBlock Text="Nome do Usuário de Destino:" Foreground="#555" Margin="0,0,0,5"/>
            <TextBox x:Name="txtContaDestino" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

            <TextBlock Text="Valor (R$):" Foreground="#555" Margin="0,0,0,5"/>
            <TextBox x:Name="txtValorTransferencia" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,25"/>

            <Button Content="TRANSFERIR" Click="Confirmar_Click" Height="45" Background="#FF002A8D" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
            <Button Content="Cancelar" Click="Cancelar_Click" Height="30" Background="Transparent" Foreground="Red" Margin="0,10,0,0" BorderThickness="0" Style="{x:Null}"/>
        </StackPanel>
    </Grid>
</Window>
