<Window x:Class="SistemaBancarioSimples.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login no Sistema Bancário" Height="250" Width="350">
    <StackPanel Margin="20">
        <TextBlock Text="Nome de Usuário:" Margin="0,0,0,5"/>
        <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Senha:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button Content="Login" Width="80" Margin="0,0,10,0" Click="LoginButton_Click"/>
            <Button Content="Cadastrar" Width="80" Click="CadastrarButton_Click"/>
        </StackPanel>

        <TextBlock x:Name="MensagemTextBlock" Foreground="Red" TextWrapping="Wrap" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>