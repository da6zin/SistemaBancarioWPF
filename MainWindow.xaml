<Window x:Class="SistemaBancarioSimples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema Bancário Simples" Height="300" Width="400">

    <StackPanel Margin="20">
        <TextBlock FontSize="18" FontWeight="Bold" Margin="0,0,0,10">Conta: 123456</TextBlock>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock FontSize="16" FontWeight="SemiBold">Saldo Atual:</TextBlock>
            <TextBlock x:Name="SaldoTextBlock" FontSize="16" Margin="10,0,0,0" FontWeight="Bold" Foreground="Green">R$ 500,00</TextBlock>
        </StackPanel>

        <TextBox x:Name="ValorTextBox" Margin="0,0,0,10" Padding="5" 
                 ToolTip="Insira o valor da transação" 
                 PreviewTextInput="ValorTextBox_PreviewTextInput"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Content="Depositar" Width="100" Margin="0,0,10,0" Click="DepositarButton_Click"/>
            <Button Content="Sacar" Width="100" Click="SacarButton_Click"/>
        </StackPanel>

        <Button Content="Ver Histórico de Transações" Click="VerHistoricoButton_Click" Height="30"/>

        <TextBlock x:Name="MensagemTextBlock" Margin="0,15,0,0" Foreground="Red" TextWrapping="Wrap"/>
    </StackPanel>
</Window>