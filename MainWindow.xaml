<Window x:Class="SistemaBancarioSimples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema Bancário Simples" Height="455" Width="800">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF002A8D" Height="80">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="$" Foreground="White" FontSize="30" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBlock Text="Internet Banking" Foreground="White" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Click="LogoutButton_Click" 
                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                        Background="Transparent" BorderThickness="0" Cursor="Hand" Style="{x:Null}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="SAIR" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock Text=" ➜" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <Border Background="White" CornerRadius="8" Margin="0,0,0,30">
                    <Border.Effect>
                        <DropShadowEffect Color="#CCC" BlurRadius="10" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel Margin="20">
                        <TextBlock Text="Saldo Disponível" Foreground="Gray"/>
                        <TextBlock x:Name="SaldoTextBlock" Text="R$ ---" FontSize="28" FontWeight="Bold" Foreground="#FF002A8D" Margin="0,5,0,0"/>
                        <TextBlock x:Name="txtNumeroConta" Text="Conta: ---" Foreground="#888" FontSize="12" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Content="DEPOSITAR" Click="DepositarButton_Click" Height="50" Background="#FF002A8D" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                    <Button Grid.Row="0" Grid.Column="2" Content="SACAR" Click="SacarButton_Click" Height="50" Background="White" Foreground="#FF002A8D" BorderBrush="#FF002A8D" BorderThickness="2" FontWeight="Bold" Cursor="Hand"/>

                    <Button Grid.Row="2" Grid.Column="0" Content="RENDIMENTO" Click="RendimentoButton_Click" Height="50" Background="White" Foreground="#FF002A8D" BorderBrush="#FF002A8D" BorderThickness="2" FontWeight="Bold" Cursor="Hand"/>
                    <Button Grid.Row="2" Grid.Column="2" Content="TRANSAÇÃO" Click="TransacaoButton_Click" Height="50" Background="White" Foreground="#FF002A8D" BorderBrush="#FF002A8D" BorderThickness="2" FontWeight="Bold" Cursor="Hand"/>
                </Grid>

                <Button Content="Ver Histórico Completo >" Click="VerHistoricoButton_Click" 
                        Background="Transparent" Foreground="#666" BorderThickness="0" HorizontalAlignment="Right" Style="{x:Null}" Cursor="Hand"/>

                <TextBlock x:Name="MensagemTextBlock" Margin="0,15,0,0" TextAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</Window>