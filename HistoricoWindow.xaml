<Window x:Class="SistemaBancarioSimples.HistoricoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Extrato Completo" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF002A8D">
            <TextBlock Text="Extrato Completo" Foreground="White" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <DataGrid x:Name="TransacoesDataGrid" Grid.Row="1" Margin="10" 
          AutoGenerateColumns="False" 
          CanUserAddRows="False" 
          BorderBrush="#EEE" 
          BorderThickness="1" 
          GridLinesVisibility="Horizontal"
          HeadersVisibility="Column">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Data/Hora" 
                    Binding="{Binding DataHora, StringFormat=dd/MM/yyyy HH:mm}" 
                    Width="150"/>

                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=C}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Fechar" Click="FecharButton_Click" Background="#EEE" BorderThickness="0"/>
    </Grid>
</Window>